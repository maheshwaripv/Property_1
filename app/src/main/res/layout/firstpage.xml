<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.siddhi.myapplication.MainActivity"
    tools:showIn="@layout/startingpage"
    android:background="#586547">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#867879"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:src="@drawable/pic3"
        android:background="#595762"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    />
    <TextView
        android:id="@+id/property_text1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="40dp"
        android:background="#7f7f7f"
        android:text="Property on Rent"
        android:textColor="4c4c4c"
        android:layout_alignParentRight="true"
        android:paddingLeft="40dp"/>


<Button
    android:id="@+id/button"
    android:layout_width="180dp"
    android:layout_height="65dp"
    android:text="Add Property"
    android:textSize="20dp"
    android:background="#c0c0c0"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/property_text1" />


    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:text="rent Property"
        android:textSize="20dp"
        android:background="#c0c0c0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/property_text1"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />




    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_marginBottom="70dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>

</RelativeLayout>
